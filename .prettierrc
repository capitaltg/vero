{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "proseWrap": "never",
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
  "tailwindAttributes": ["classNames"],
  "tailwindFunctions": ["cn", "cva", "tw"]
}
